<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phantom.nooLiteClient" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>nooLiteClient</name>
    <description>
        A client application for nooLite control
    </description>
    <author email="alexey@ibissoft.se" href="http://ibissoft.se">
        Alexey Stryi
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
